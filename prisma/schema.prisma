generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  username String
  password String
  avatar   String
  gender   Gender
  role     Role   @default(User)

  // relations

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id, username])
  @@index([id, username])
}

enum Role {
  Admin
  User
  Banned
}

enum Gender {
  MALE
  FEMALE
}
