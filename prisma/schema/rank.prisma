model OfficalRank {
  id String @id @default(uuid())

  timeType RankTimeType @default(WEEK)

  createdAt DateTime            @default(now())
  updatedAt DateTime            @updatedAt
  plan      OfficalRankOnPlan[]

  @@unique([id])
  @@index([id, timeType])
}

model OfficalRankOnPlan {
  officalRank   OfficalRank @relation(fields: [officalRankId], references: [id])
  officalRankId String
  post          Post        @relation(fields: [postId], references: [id])
  postId        String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([officalRankId, postId])
}

enum RankTimeType {
  DAY
  WEEK
  MONTH
}
