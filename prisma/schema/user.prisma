model User {
  id        Int    @id @default(autoincrement())
  username  String
  avatar    String
  ipAddress String
  desc      String @default("还没有介绍哦~")
  role      Role   @default(User)

  birthDate DateTime?
  gender    Gender?

  apple       AppleUser?
  plan        Plan?
  challenge21 Challenge21?
  quickNotes  QuickNote[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id])
  @@index([id, username])
}

model AppleUser {
  id     String @id
  userId Int    @unique
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([id])
  @@index([id, userId])
}
